# ⚠️  SECURITY NOTICE: This is a template file
# Copy this to .env and fill in your actual credentials
# NEVER commit real credentials to version control

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Gemini API Configuration  
GOOGLE_API_KEY=your_google_gemini_api_key_here
# Or use service account credentials if preferred
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# PayFast Configuration (for Edge Functions)
PAYFAST_SANDBOX_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_SANDBOX_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_SANDBOX_PASSPHRASE=your_payfast_passphrase

# Supabase Project Reference (for Edge Functions)
PROJECT_REF=your_supabase_project_ref

# PostHog Analytics Configuration
EXPO_PUBLIC_POSTHOG_API_KEY=phc_your_posthog_api_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Feature Flags Configuration
# Set to 'true' to auto-upgrade all new users to Captain's Club (for testing)
# Set to 'false' to use standard 'basic' plan for new users (for production)
EXPO_PUBLIC_AUTO_UPGRADE_NEW_USERS=false
# Trial duration in days (null for permanent access, number for trial period)
EXPO_PUBLIC_CAPTAINS_CLUB_TRIAL_DAYS=null

# Security & Logging Configuration
# Environment type: 'development', 'staging', 'production'
EXPO_PUBLIC_ENV=production
# Log level: 'error', 'warn', 'info', 'debug'
EXPO_PUBLIC_LOG_LEVEL=error
# Enable/disable sensitive data sanitization in logs
EXPO_PUBLIC_SANITIZE_LOGS=true
# Enable security audit logging
EXPO_PUBLIC_SECURITY_LOGGING=true

# Production PayFast Configuration (uncomment for production)
# PAYFAST_MERCHANT_ID=your_production_merchant_id
# PAYFAST_MERCHANT_KEY=your_production_merchant_key
# PAYFAST_PASSPHRASE=your_production_passphrase
